{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "importHelpers": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": []
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
    ]
}